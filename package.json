{
  "name": "skyscout-ai",
  "version": "1.0.0",
  "description": "A smart, AI-powered flight & trip discovery engineâ€”your eyes on every sky.",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "tools/*"
  ],
  "scripts": {
    "cleanup": "chmod +x scripts/cleanup.sh && ./scripts/cleanup.sh",
    "build": "nx run-many --target=build --all",
    "dev": "nx run-many --target=dev --projects=@skyscout/shared,@skyscout/trpc,@skyscout/ui,@skyscout/web --parallel",
    "dev:full": "docker-compose -f infra/docker/docker-compose.yml up -d",
    "dev:down": "docker-compose -f infra/docker/docker-compose.yml down",
    "dev:rebuild": "docker-compose -f infra/docker/docker-compose.yml down && docker-compose -f infra/docker/docker-compose.yml build && docker-compose -f infra/docker/docker-compose.yml up -d",
    "dev:logs": "docker-compose -f infra/docker/docker-compose.yml logs -f",
    "dev:libs": "nx run-many --target=dev --projects=@skyscout/shared,@skyscout/trpc,@skyscout/ui --parallel",
    "dev:web": "nx run @skyscout/web:dev",
    "dev:api": "nx run @skyscout/api:dev",
    "team:frontend": "nx run-many --target=dev --projects=@skyscout/web,@skyscout/ui --parallel",
    "team:backend": "nx run-many --target=dev --projects=@skyscout/api,@skyscout/auth-service --parallel",
    "team:mobile": "nx run @skyscout/mobile:dev",
    "team:data": "nx run-many --target=dev --projects=@skyscout/ml-service,@skyscout/ai-prediction --parallel",
    "team:search": "nx run @skyscout/search-engine:dev",
    "test:affected": "nx affected:test --parallel --maxParallel=8",
    "test:team": "nx affected:test --parallel --maxParallel=8",
    "lint:affected": "nx affected:lint --parallel --maxParallel=4",
    "lint:team": "nx affected:lint --parallel --maxParallel=4",
    "build:affected": "nx affected:build --parallel --maxParallel=4",
    "build:team": "nx affected:build --parallel --maxParallel=4",
    "dev:ml": "cd apps/ml-service && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:search": "cd apps/search-engine && cargo run",
    "setup:dev": "chmod +x scripts/setup/setup-dev.sh && ./scripts/setup/setup-dev.sh",
    "setup:dev:win": "scripts/setup/setup-dev.bat",
    "db:migrate": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint-staged": "lint-staged",
    "type-check": "nx run-many --target=type-check --all",
    "clean": "nx reset && rimraf node_modules apps/*/node_modules libs/*/node_modules",
    "prepare": "husky install",
    "release": "semantic-release",
    "ai:maintenance": "node scripts/ai-maintenance.js",
    "ai:task-check": "node scripts/check-ai-tasks.js",
    "ai:generate-docs": "node scripts/generate-docs.js",
    "ai:autonomous:start": "node scripts/ai-automation/autonomous-dev.js start",
    "ai:autonomous:status": "node scripts/ai-automation/autonomous-dev.js status",
    "ai:autonomous:config": "node scripts/ai-automation/autonomous-dev.js config",
    "perf:monitor": "node scripts/testing/performance-monitor.js",
    "perf:lighthouse": "node scripts/testing/performance-monitor.js lighthouse",
    "perf:bundle": "node scripts/testing/performance-monitor.js bundle",
    "perf:ci": "node scripts/performance-cicd.js check",
    "perf:baseline": "node scripts/performance-cicd.js baseline",
    "perf:analyze": "cd apps/web && npm run analyze",
    "test:performance": "node scripts/testing/test-performance.js",
    "test:bundle": "cd apps/web && npm run bundle:check",
    "mcp:build": "cd apps/mcp-server && npm run build",
    "mcp:dev": "cd apps/mcp-server && npm run dev",
    "mcp:start": "cd apps/mcp-server && npm run start",
    "mcp:serve": "cd apps/mcp-server && npm run mcp:serve",
    "storybook": "cd libs/ui && npm run storybook",
    "build-storybook": "cd libs/ui && npm run build-storybook",
    "complexity": "madge --circular --extensions ts,tsx,js,jsx apps libs",
    "security:audit": "npm audit --audit-level=moderate",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm install"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "^21.4.0",
    "@nx/js": "^17.2.8",
    "@nx/next": "^17.2.8",
    "@nx/node": "^17.2.8",
    "@nx/react": "^17.2.8",
    "@nx/workspace": "^17.2.8",
    "@size-limit/file": "^11.2.0",
    "@types/jest-axe": "^3.5.9",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jsonc-eslint-parser": "^2.4.0",
    "lighthouse": "^12.8.0",
    "lint-staged": "^15.2.0",
    "nx": "^21.2.3",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.12",
    "size-limit": "^11.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/skyscout-ai.git"
  },
  "keywords": [
    "flight-search",
    "travel",
    "ai",
    "machine-learning",
    "microservices",
    "nextjs",
    "rust",
    "go",
    "python",
    "kubernetes"
  ],
  "author": "Owen Richards",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "critters": "^0.0.23",
    "react-hook-form": "^7.60.0"
  }
}
