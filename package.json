{
  "name": "skyscout-ai",
  "version": "1.0.0",
  "description": "A smart, AI-powered flight & trip discovery engineâ€”your eyes on every sky.",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "tools/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all",
    "dev": "nx run-many --target=dev --projects=@skyscout/shared,@skyscout/trpc,@skyscout/ui,@skyscout/web --parallel",
    "dev:libs": "nx run-many --target=dev --projects=@skyscout/shared,@skyscout/trpc,@skyscout/ui --parallel",
    "dev:web": "nx run @skyscout/web:dev",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint-staged": "lint-staged",
    "type-check": "nx run-many --target=type-check --all",
    "clean": "nx reset && rimraf node_modules apps/*/node_modules libs/*/node_modules",
    "prepare": "husky install",
    "release": "semantic-release",
    "ai:maintenance": "node scripts/ai-maintenance.js",
    "ai:task-check": "node scripts/check-ai-tasks.js",
    "ai:generate-docs": "node scripts/generate-docs.js",
    "ai:autonomous:start": "node scripts/autonomous-dev.js start",
    "ai:autonomous:status": "node scripts/autonomous-dev.js status",
    "ai:autonomous:config": "node scripts/autonomous-dev.js config",
    "storybook": "cd libs/ui && npm run storybook",
    "build-storybook": "cd libs/ui && npm run build-storybook",
    "complexity": "madge --circular --extensions ts,tsx,js,jsx apps libs",
    "security:audit": "npm audit --audit-level=moderate",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm install"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "^17.2.8",
    "@nx/js": "^17.2.8",
    "@nx/next": "^17.2.8",
    "@nx/node": "^17.2.8",
    "@nx/react": "^17.2.8",
    "@nx/workspace": "^17.2.8",
    "@types/jest-axe": "^3.5.9",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.2.0",
    "nx": "^17.2.8",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.12",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/skyscout-ai.git"
  },
  "keywords": [
    "flight-search",
    "travel",
    "ai",
    "machine-learning",
    "microservices",
    "nextjs",
    "rust",
    "go",
    "python",
    "kubernetes"
  ],
  "author": "Owen Richards",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "react-hook-form": "^7.60.0"
  }
}
